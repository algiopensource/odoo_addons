<?xml version="1.0"?>
<odoo>

  <record model="ir.ui.view" id="view_discount_contract_line_form">
    <field name="name">discount.contract.line.form</field>
    <field name="model">discount.contract.line</field>
    <field name="inherit_id" ref="smile_discount_contract.view_discount_contract_line_form"/>
    <field name="arch" type="xml">
      <field name="discount_amount" position="after">
        <field name="theoretical_base"/>
        <field name="theoretical_discount"/>
      </field>
    </field>
  </record>

  <record model="ir.ui.view" id="view_discount_contract_line_tree">
    <field name="name">discount.contract.line.tree</field>
    <field name="model">discount.contract.line</field>
    <field name="inherit_id" ref="smile_discount_contract.view_discount_contract_line_tree"/>
    <field name="arch" type="xml">
      <field name="discount_amount" position="after">
        <field name="theoretical_base"/>
        <field name="theoretical_discount"/>
      </field>
    </field>
  </record>

</odoo>
