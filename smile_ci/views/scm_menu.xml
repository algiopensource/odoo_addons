    <act_window name="System Parameters" res_model="ir.config_parameter" id="action_config_parameter" domain="[('key', 'like', 'ci.')]"/>
    <menuitem id="menu_config_parameter" parent="smile_scm.menu_scm_config_params" action="action_config_parameter" sequence="18"/>

  </data>
